<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partial/header.ejs')%>
    <title>Signin</title>
  </head>
  <body>
    <%-include('./partial/navbar')%>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img
        class="container ml-4 mb-4"
        src="<%= blog.coverimg %>"
        width="80%"
        height="500vh"
      />
      <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <p>Written By <%= blog.createdby.email %></p>
    </div>
    <h2 class="container">Comments (<%= comments.length %>)</h2>
    <% if (locals.user) { %>

    <form action="/blog/comment/<%= blog._id %>" method="post">
      <div class="container ml-4 mb-3">
        <textarea
          class="form-control"
          placeholder="Leave a comment here"
          id="content"
          style="height: 100px"
          name="content"
        ></textarea>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </div>
    </form>

    <% } %>
    <div class="container mt-4">
      <% comments.forEach(comment => { %>
      <p><%= comment.postby.fullname %> :</p>
      <div class="card">
        <div class="card-body"><%= comment.content %></div>
      </div>
      <% }) %>
    </div>
    <%-include('./partial/script.ejs')%>
  </body>
</html>
